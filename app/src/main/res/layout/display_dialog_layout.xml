            android:text="Cancel"
            android:layout_span="1"/>

        <Button
            android:id="@+id/btndone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="Done"
            android:layout_span="1"/>
